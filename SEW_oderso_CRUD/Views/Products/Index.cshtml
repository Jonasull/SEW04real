@{
}
@model List<Product>
<h1>Produkt-Tabelle</h1>

<a class="btn btn-warning" asp-controller="Products" asp-action="Create">Create</a>

<table class="table">
    <tr>
        <th>Produkt-ID</th>
        <th>Produktname</th>
        <th>Preis</th>
        <th>Actions</th>
    </tr>
    @foreach (Product product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>

            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Delete @product.Name?');">Delete</a>
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@product">Edit</a>
            </td>

        </tr>
    }
</table>